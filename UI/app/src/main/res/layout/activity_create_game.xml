<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="@string/create_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textSize="35sp"
        android:layout_marginTop="16dp" />

    <View style="@style/Line"
        android:layout_height="1dp"
        android:id="@+id/view"
        android:layout_width="100dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"> </View>

    <ScrollView
        android:layout_width="368dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:scrollbarStyle="insideOverlay"
        android:fadeScrollbars="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:text="@string/num_players"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView11"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="16dp"
                android:textSize="22sp"
                app:layout_constraintTop_toBottomOf="@+id/view"
                android:layout_marginTop="16dp" />

            <Spinner
                android:layout_height="48dp"
                android:id="@+id/num_players_spinner"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/textView11"
                android:layout_marginStart="32dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="32dp"
                android:layout_marginEnd="32dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="32dp"
                android:layout_width="100dp" />

            <TextView
                android:text="@string/num_bases"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView12"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textSize="22sp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/num_players_spinner"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="16dp" />

            <Spinner
                android:layout_height="48dp"
                android:id="@+id/num_bases_spinner"
                android:layout_width="100dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/textView12"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="16dp" />

            <TextView
                android:text="@string/game_dur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView13"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/num_bases_spinner"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="16dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textSize="22sp" />

            <Spinner
                android:layout_height="48dp"
                android:id="@+id/game_dur_spinner"
                android:layout_width="100dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/textView13"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="16dp" />

            <TextView
                android:text="@string/game_rad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView16"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textSize="22sp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/game_dur_spinner"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="16dp" />

            <Spinner
                android:layout_height="48dp"
                android:id="@+id/game_rad_spinner"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/textView16"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="16dp"
                android:layout_width="100dp" />

            <TextView
                android:text="@string/game_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView17"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textSize="22sp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/game_rad_spinner"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="16dp" />

            <Spinner
                android:layout_height="48dp"
                android:id="@+id/game_start_spinner"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/textView17"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="16dp"
                android:layout_width="100dp" />

            <Button
                android:text="@string/start_game"
                android:id="@+id/button7"
                android:layout_marginEnd="40dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="40dp"
                android:layout_marginStart="40dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="40dp"
                android:textSize="18sp"
                android:layout_height="60dp"
                android:layout_width="150dp"
                android:background="@android:color/holo_green_dark"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/game_start_spinner"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp"/>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>